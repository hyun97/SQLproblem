<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>SQLproblem</display-name>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <description>Mysql Datasource</description>
        <res-ref-name>jdbc/mysql</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <!-- index.jsp -->
    <servlet>
        <servlet-name>index-jsp</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>index-jsp</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <!-- join.jsp -->
    <servlet>
        <servlet-name>join-jsp</servlet-name>
        <jsp-file>/partial/join.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>join-jsp</servlet-name>
        <url-pattern>/partial/join</url-pattern>
    </servlet-mapping>
    <!-- login.jsp -->
    <servlet>
        <servlet-name>login-jsp</servlet-name>
        <jsp-file>/partial/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>login-jsp</servlet-name>
        <url-pattern>/partial/login</url-pattern>
    </servlet-mapping>
    <!-- profile.jsp -->
    <servlet>
        <servlet-name>profile-jsp</servlet-name>
        <jsp-file>/partial/profile.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>profile-jsp</servlet-name>
        <url-pattern>/partial/profile</url-pattern>
    </servlet-mapping>
    <!-- sendConfirmEmail.jsp -->
    <servlet>
        <servlet-name>sendConfirmEmail-jsp</servlet-name>
        <jsp-file>/partial/sendConfirmEmail.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>sendConfirmEmail-jsp</servlet-name>
        <url-pattern>/partial/sendConfirmEmail</url-pattern>
    </servlet-mapping>
</web-app>